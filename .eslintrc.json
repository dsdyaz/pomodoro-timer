  {
    "extends": [
        "airbnb",
        "plugin:jsx-a11y/recommended",
        "prettier"
      ],
      "plugins": [
        "jsx-a11y",
        "prettier"
      ],
      "env": {"browser" : true},
      "rules": {
        "semi": 0,
        "react/jsx-filename-extension": [
          1,
          {
            "extensions": [
              ".js",
              ".jsx"
            ]
          }
        ],
        "react/jsx-props-no-spreading": [
          1
        ],
        "no-unused-vars": "warn",
        "prettier/prettier": [
          "error",
          {
            "semi": false
          }
        ],
        "jsx-a11y/label-has-associated-control": [
          2,
          {
            "assert": "either"
          }
        ],
        "react-hooks/exhaustive-deps": [
          0
        ]
      },
      "overrides": [
        {
          "files": [
            "**/*.stories.*"
          ],
          "rules": {
            "import/no-anonymous-default-export": "off"
          }
        },
        {
          "files": [
            "*.jsx",
            "*.js"
          ]
        }
      ]
    }